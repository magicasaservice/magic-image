{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "//#t:release": {
      "cache": false,
      "dependsOn": ["nuxt#build"]
    },
    "test": {},
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["./dist/**"]
    },
    "nuxt#dev": {
      "cache": false,
      "persistent": true
    },
    "nuxt#build": {
      "outputs": ["dist/nuxt/*"]
    }
  }
}
